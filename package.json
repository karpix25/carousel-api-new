      "helmet": "^7.1.0",
      "compression": "^1.7.4",
      "marked": "^9.1.6",
      "puppeteer": "^21.5.2",
      "zod": "^3.22.4",
      "winston": "^3.11.0",
      "dotenv": "^16.3.1"
    },
    "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/cors": "^2.8.17",
      "@types/compression": "^1.7.5",
      "@types/node": "^20.9.0",
      "typescript": "^5.2.2",
      "tsx": "^4.4.0",
      "eslint": "^8.54.0",
      "@typescript-eslint/eslint-plugin": "^6.12.0",
      "@typescript-eslint/parser": "^6.12.0",
      "jest": "^29.7.0",
      "@types/jest": "^29.5.8"
    },
    "engines": {
      "node": ">=18.0.0"
    }
