{
    "name": "carousel-api",
    "version": "1.0.0",
    "description": "API service for generating beautiful carousel cards from markdown text",
    "main": "dist/app.js",
    "scripts": {
      "dev": "tsx watch src/app.ts",
      "build": "tsc",
      "start": "node dist/app.js",
